{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["components/*"],
      "app/*": ["src/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "types",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "include": ["components"],
  "exclude": ["node_modules", "lib", "es", "components/**/__tests__", "components/**/**/__tests__"]
}